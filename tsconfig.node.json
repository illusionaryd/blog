{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "scantpress.config.*",
    "scripts/*.ts",
    "local/*.ts",
    "packages/vite-plugin-scantpress/**/*.ts",
    "packages/shared/**/*.ts",
    "packages/scantpress/scripts/*.ts",
    "scantpress.config.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "paths": {
      "@plugin/*": ["./packages/vite-plugin-scantpress/*"],
      "@/*": ["./*"]
    }
  }
}
